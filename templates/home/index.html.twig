{% extends 'base.html.twig' %}

{% block title %}Accueil - Le Braséro{% endblock %}

{% block content %}

  
  <main class="container">
    <div class="mb-4">
      <img src="{{ asset('assets/images/feudebois.jpg') }}" alt="feu" class="img-fluid">
    </div>
  
    <div class="row g-5">
        {% for items in dayMenu %}
        <div class="col-md-4 mb-5">
            <div class="position-sticky menudujour" style="top: 2rem;">
                <h4 class="mt-3 text-center">{{ items.title }}<br>{{ (items.prix /100)|number_format(2, ',' , '.') }} €</h4>
                <h6 class="mt-5 text-center">{{ items.subtitle1 }}</h6>
                <p class="mt-4 text-center">{{ items.entree }}</p>
                <h6 class="mt-5 text-center">{{ items.subtitle2 }}</h6>
                <p class="mt-4 text-center">{{ items.plat }}</p>
                <h6 class="mt-5 text-center">{{ items.subtitle3 }}</h6>
                <p class="mt-4 text-center">{{ items.dessert }}</p>
                <img src="./uploads/{{ items.image }}" alt="" class="mx-auto d-block img-fluid w-75">
            </div>
        </div>
        {% endfor %}

        <div class="col-md-8">
            <article class="mb-5">
                <div class="">
                    <h3 class="fst-italic">Qui sommes nous?</h3>
                    <p class="my-4">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
                    <img src="{{ asset('assets/images/cartevisite.png') }}" class="mx-auto d-block img-thumbnail w-75 mb-5" alt="carte de visite">
                </div>
                <div class="braseroActu">
                    {% for actus in actu %}
                    <hr>
                    <h3>{{ actus.titre }}</h3>
                    <p>{{ actus.date }}</p>
                    <p class="text-align px-5">{{ actus.texte }}</p>
                    <img src="./uploads/{{ actus.image }}" alt="{{ actus.titre }}" class="img-fluid mx-auto d-block afficheMenu">
                    <hr>
                    {% endfor %}
                </div>
            </article>
        </div>
    </div>
  
  </main>
  
{% endblock %}
