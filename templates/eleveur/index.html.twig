{% extends 'base.html.twig' %}

{% block title %}Nos Fournisseurs - Le Braséro{% endblock %}

{% block content %}
    <div class="container">
        <div class="mb-4">
            <img src="{{ asset('assets/images/viande.jpg') }}" alt="plat" class="img-fluid">
        </div>
    </div>

    <div class="container">
        <h5 class="brasero-header3 mb-5 text-center mx-auto d-block">Car vous préparer des produits d'exeptions est au coeur de nos préoccupations, nous faisons le choix des meilleurs éleveurs !</h5>
        
        {% for items in suppliers %}
        <div class="container my-5">
            <div class="row">
                <div class="col-md-8">
                    <img src="./uploads/{{ items.image }}" alt="{{ items.titre }}" class="mx-auto d-block img-thumbnail w-75">
                </div>
                <div class="col-md-4 my-auto d-block">
                    <h5 class="text-center mt-4 mt-md-0">{{ items.titre }}</h5>
                    <hr>
                    <p>{{ items.texte }}</p>
                </div>
            </div>
        </div>

        <div class="divider"></div>
        {% endfor %}

    </div>
{% endblock %}
